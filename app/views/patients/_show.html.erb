<% if @patients %>
	<h1>Your search yielded the following results</h1> <br/>
	<table>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Age</th>
			<th>Gender</th>
			<th>City</th>
			<th>Contact Number</th>
			<th>Alternate Number</th>
		</tr>
		<% @patients.each do |p| %>
		<tr>
			<td><%= p.first_name %></td>
			<td><%= p.last_name %></td>
			<td><%= p.age %></td>
			<td><%= p.gender %></td>
			<td><%= p.city %></td>
			<td><%= p.contact_no %></td>
			<td><%= p.alternate_no %></td>
		</tr>
	<% end %> 
	</table>
<% end %>