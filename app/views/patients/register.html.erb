<h1>Welcome to create a new patient</h1>
<%= form_with model: @patient, url: create_path, local: true do |f| %>
	<%= f.label :first_name %>
	<%= f.text_field :first_name %>
	<%= f.label :last_name %>
	<%= f.text_field :last_name %> <br/>
	<%= f.label :date_of_birth %>
	<%= f.date_field :date_of_birth %>
	<%= f.label :age %>
	<%= f.number_field :age %> 
	<%= f.radio_button(:gender, "Male") %>
	<%= f.label(:gender_male, "Male") %>
	<%= f.radio_button(:gender, "Female") %>
	<%= f.label(:gender_female, "Female") %><br/>
	<%= f.label :address %>
	<%= f.text_area :address %> <br/>
	<%= f.label :city %>
	<%= f.text_field :city %>
	<%= f.label :state %>
	<%= f.text_field :state %> <br/>
	<%= f.label :pincode %>
	<%= f.text_field :pincode %> <br/>
	<%= f.label :contact_no %>
	<%= f.telephone_field :contact_no %>
	<%= f.label :alternate_no %>
	<%= f.telephone_field :alternate_no %> <br/>

	<%= f.submit "Create" %>
<% end %>